<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/backToMenuFromSearchAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goBackToCustomerMenu"
            android:text="Back" />

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/addressSearchView"
            android:iconifiedByDefault="false"
            android:queryHint="input desired location... " />

        <ListView
            android:id="@+id/addresslistview"
            android:layout_width="match_parent"
            android:layout_height="495dp">

        </ListView>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="!Long Click One of Branch To Make Request"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>