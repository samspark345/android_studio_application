<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/backToMenuFromSearchService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />

        <SearchView
            android:layout_width ="match_parent"
            android:layout_height="wrap_content"
            android:id ="@id/serviceSearchView"
            android:iconifiedByDefault ="false"
            android:queryHint="Input service you looking for... "
            ></SearchView>

        <ListView
            android:id="@+id/servicelistview"
            android:layout_width="match_parent"
            android:layout_height="475dp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:layout_gravity="center"
            android:text="!Long Click One of Branch To Make Request"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>